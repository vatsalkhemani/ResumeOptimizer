# ===========================================
# Resume Optimizer - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ===========================================

# OpenAI API Key (Standard)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Azure OpenAI (Optional - Overrides Standard OpenAI if set)
# Required if you want to use Azure's enterprise-grade security and speed
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=localhost

# Frontend Configuration  
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional: LaTeX distribution path (if not in system PATH)
# LATEX_PATH=/usr/local/texlive/2024/bin/x86_64-linux
